{
  "@std/esm": {
    "esm": "js"
  },
  "main": "./src/server/index.js",
  "name": "boilerplate-nutella",
  "version": "1.0.0",
  "description": "SSR plus Webpack ready.",
  "scripts": {
    "dev": "concurrently --kill-others \"better-npm-run watch-client\" \"better-npm-run start-dev\"",
    "production": "better-npm-run build-js && better-npm-run build-app && better-npm-run start-prod",
    "lint": "eslint common server client --ignore-pattern __tests__",
    "test": "better-npm-run test",
    "prod": "better-npm-run build-js"
  },
  "betterScripts": {
    "start-dev": {
      "command": "babel-node --inspect ./src/server/index",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "watch-client": {
      "command": "babel-node ./webpack/webpack.dev.server.js",
      "env": {
        "UV_THREADPOOL_SIZE": 100,
        "PORT": 3000
      }
    },
    "start-prod": {
      "command": "node ./dist/server/index",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src",
        "PORT": 8080
      }
    },
    "build-js": {
      "command": "webpack --verbose --colors --display-error-details --config webpack/webpack.config.prod.js"
    },
    "build-app": {
      "command": "babel ./server -d ./dist/server && babel ./client -d ./dist/client && babel ./webpack -d ./dist/webpack && babel ./common -d ./dist/common && cp webpack-assets.json ./dist/webpack-assets.json"
    },
    "test": {
      "command": "ava --verbose",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "@std/esm": "^0.17.3",
    "axios": "^0.17.1",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.3",
    "concurrently": "^3.5.1",
    "cookies": "^0.7.1",
    "cookies-js": "^1.2.3",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "moment": "^2.18.1",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-cookies": "^1.0.1",
    "redux-thunk": "^2.2.0",
    "revalidator": "^0.3.1",
    "string-mask": "^0.3.0",
    "sweetalert2": "^6.9.1",
    "webpack-isomorphic-tools": "^3.0.5",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.25.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-ava": "^2.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "jsdom": "^11.2.0",
    "json-loader": "^0.5.7",
    "node-sass": "^4.7.2",
    "nyc": "^11.2.1",
    "react-hot-loader": "^3.1.2",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "^1.5.0",
    "redux-ava": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-dev-server": "^2.2.0",
    "webpack-hot-middleware": "^2.21.0"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "failFast": true,
    "require": [
      "./src/util/test-server-setup.js",
      "babel-register"
    ],
    "babel": "inherit"
  }
}
